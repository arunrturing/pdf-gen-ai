{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@types/*": ["src/types/*"],
            "@utils/*": ["src/utils/*"],
            "@modules/*": ["src/modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}