{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@types": ["src/types/index.ts"],
            "@utils": ["src/utils/index.ts"],
            "@modules": ["src/modules/index.ts"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}